{
  "name": "@poikr/notedown",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/renderer/test-apps/*"
  ],
  "scripts": {
    "test": "bun test --recursive",
    "test:parser": "bun test packages/parser",
    "test:renderer": "bun test packages/renderer",
    "build": "bun run --filter '*' build",
    "typecheck": "bun run --filter '*' typecheck"
  }
}
